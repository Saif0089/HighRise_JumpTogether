.navigation-controller {
    flex-grow: 1;
    flex-direction: column-reverse;
}

.landscape .navigation-controller {
    overflow: hidden;
}

.navigation-controller__background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--color-fishbase-eel);
}

.navigation-controller__header-safe-area {
    height: var(--safe-area-top);
    background-color: var(--color-fishbase-eel);
}

.navigation-controller__header {
    flex-grow: 0;
    flex-shrink: 0;
    flex-direction: row;
    height: 44px;
    background-color: var(--color-fishbase-eel);
}

.navigation-controller__content {
    flex-grow: 1;
}

.navigation-controller__title {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.navigation-controller__title .label {
    color: var(--color-fishbase-bonito);
    font-size: var(--font-size-l);
    -unity-text-align: middle-center;
    -unity-font-definition: var(--font-black);
    flex-grow: 1;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    align-self: center;
    max-width: 75%;
}

.navigation-controller__title .label {
    margin-top: auto;
    margin-bottom: auto;
}

.navigation-controller__item {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}

.navigation-controller__left, .navigation-controller__right {
    justify-content: center;
    margin-left: auto;
    margin-top: auto;
    margin-bottom: auto;
    height: 44px;
}

.navigation-controller__left {
    margin-left: 6px;
}

.navigation-controller__right {
    margin-right: 6px;
}



/** Back Button **/

.navigation-controller-back {
    flex-shrink: 0;
    flex-grow: 0;
    padding: 10px;
    background-color: rgba(0,0,0,0);
}

.navigation-controller-back Image {
    --unity-image-tint-color: var(--color-fishbase-mackerel);
    --unity-image: var(--image-icon-back);
    width: 24px;
    height: 24px;
}

.rtl .navigation-controller-back Image {
    rotate: 180deg;
}

/** Add Button **/

.navigation-controller__right #_addButton {
    flex-shrink: 0;
    flex-grow: 0;
    padding: 4px;
    background-color: rgba(0,0,0,0);
}

.navigation-controller__right #_addButton UIImage {
    --unity-image-tint-color: var(--color-fishbase-mackerel);
    --unity-image: var(--image-icon-add);
    width: 24px;
    height: 24px;
}



/** Navigation Button **/

.navigation-controller__header .button,
.navigation-controller__header .button:active,
.navigation-controller__header .button:hover,
.navigation-controller__header .button:hover:focus,
.navigation-controller__header .button:focus {
    background-color: rgba(0,0,0,0);
    -unity-background-image-tint-color: var(--color-fishbase-mackerel);
    width: auto;
    height: 100%;
    padding: 10px;
}

.navigation-controller__header .button {
    
}

.navigation-controller__header .button Image {
    --unity-image-tint-color: var(--color-fishbase-mackerel);
}


.navigation-controller__header .button:disabled {
    background-color: rgba(0,0,0,0);
    color: var(--color-fishbase-tuna);
    height: 100%;
}

.navigation-controller__header .button:disabled Image {
    --unity-image-tint-color: var(--color-fishbase-tuna);
}

/** Transparent  **/

.navigation-controller--transparent .navigation-controller__header {
    background-color: rgba(0,0,0,0);
}

.navigation-controller--transparent .navigation-controller__header-safe-area{
    background-color: rgba(0,0,0,0);
}

.navigation-controller--transparent .navigation-controller__content {
    margin-top: 0;
}

.navigation-controller--transparent .navigation-controller-back {
    width: 36px;
    height: 36px;
    padding: 0px;
    background-color: var(--color-fishbase-blackfish-40);
    border-radius: 12px;
}

.navigation-controller--transparent .button Image {
    --unity-image-tint-color: var(--color-fishbase-whitefish);
}

.navigation-controller--transparent .navigation-controller-back Image {
    --unity-image-tint-color: var(--color-fishbase-whitefish);
    width: 24px;
    height: 24px;
    margin: auto;
}

.navigation-controller--transparent .navigation-controller__title,
.navigation-controller--transparent .navigation-controller__right,
.navigation-controller--transparent .navigation-controller__left {
    margin-top: auto;
    margin-bottom: 0;
}

.navigation-controller--transparent .navigation-controller__left {
    margin-left: 10px;
}

.navigation-controller--transparent .navigation-controller__right {
    margin-right: 10px;
}


.navigation-controller--transparent .navigation-controller__header .button,
.navigation-controller--transparent .navigation-controller__header .button:active,
.navigation-controller--transparent .navigation-controller__header .button:hover,
.navigation-controller--transparent .navigation-controller__header .button:hover:focus,
.navigation-controller--transparent .navigation-controller__header .button:focus {
    background-color: var(--color-fishbase-blackfish-40);
    color: var(--color-fishbase-bonito);
    -unity-background-image-tint-color: var(--color-fishbase-bonito);
    --unity-image-tint-color: var(--color-fishbase-bonito);
    height: 36px;
    padding: 6px;
    border-radius: 12px;
}

.navigation-controller--transparent .navigation-controller__header .button:disabled {
    background-color: var(--color-fishbase-catfish);
    color: var(--color-fishbase-tuna);
}

.navigation-controller__view {
    flex-grow: 1;        
}

.navigation-controller__input-blocker {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: none;
}

/** Transparent Overlay **/

.navigation-controller--transparent-overlay .navigation-controller__header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    padding-top: var(--safe-area-top);
}

.navigation-controller--transparent-overlay .navigation-controller__content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin-top: 0;
}

.navigation-controller--transparent-overlay .navigation-controller__title,
.navigation-controller--transparent-overlay .navigation-controller__right,
.navigation-controller--transparent-overlay .navigation-controller__left {
    min-height: 36px;
}
