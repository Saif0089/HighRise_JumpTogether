:root {
    --color-fishbase-starfish: rgba(40,37,55,1);

    /**

        Custom Fishbase color set for studio

     */
    --color-fishbase-whitefish: rgba(250, 250, 250,1);            /* 1 */
    --color-fishbase-whitefish-15: rgba(250, 250, 250,0.15);
    --color-fishbase-whitefish-50: rgba(250, 250, 250,0.5);
    --color-fishbase-bonito: rgba(172, 174, 185,1);             /* 2 */
    --color-fishbase-bonito-10: rgba(172, 174, 185,0.1);
    --color-fishbase-bonito-15: rgba(172, 174, 185,0.15);
    --color-fishbase-bonito-25: rgba(172, 174, 185,0.25);
    --color-fishbase-bonito-50: rgba(172, 174, 185,0.5);
    --color-fishbase-mackerel: rgba(171, 173, 184,1);          /* 3 */
    --color-fishbase-mackerel-20: rgba(171, 173, 184,0.2);
    --color-fishbase-mackerel-40: rgba(171, 173, 184,0.4);
    --color-fishbase-anchovy: rgba(102, 103, 112, 1);          /* 4 */
    --color-fishbase-salmon: rgba(65, 67, 74,1);               /* 5 */
    --color-fishbase-tuna: rgba(45, 44, 47, 1);                /* 6 */
    --color-fishbase-catfish: rgba(31, 32, 35, 1);             /* 7 */
    --color-fishbase-eel: rgba(27, 27, 30, 1);                 /* 8 */
    --color-fishbase-eel-25: rgba(27, 27, 30, 0.25);
    --color-fishbase-eel-80: rgba(27, 27, 30, 0.8);
    --color-fishbase-blackfish: rgba(21, 21, 25, 1);           /* 9 */
    --color-fishbase-blackfish-60: rgba(21, 21, 25, 0.6);
    --color-fishbase-blackfish-40: rgba(21, 21, 25, 0.4);
    --color-fishbase-blackfish-20: rgba(21, 21, 25, 0.2);
    --color-fishbase-blackfish-15: rgba(21, 21, 25, 0.15);

    --color-accents-primary: rgba(98, 66, 243, 1);
    --color-accents-primary-60: rgba(98, 66, 243, 0.6);
    --color-accents-primary-selected: rgba(63, 53, 173, 1);
    --color-accents-primary-selected-25: rgba(63, 53, 173, 0.25);

    --color-basic-alert: rgba(242, 106, 103, 1);
}

/***** Button *****/

.button {
    border-radius: 4px;
    padding-left: 24px;
    padding-right: 24px;
    height: 44px;
    align-items: center;
    justify-content: center;
}

.button-primary:hover {
    border-radius: 4px;
}

/***** Primary button *****/

.button-primary,
.button-primary:active,
.button-primary:hover,
.button-primary:hover:focus,
.button-primary:focus {
    background-color: var(--color-accents-primary);
    border-color: var(--color-accents-primary);
    color: var(--color-fishbase-whitefish);
}

.button-primary Image
{
    --unity-image-tint-color: var(--color-fishbase-whitefish);
}

/***** Outline button *****/

.button-outline,
.button-outline:active,
.button-outline:hover,
.button-outline:hover:focus,
.button-outline:focus {
    background-color: var(--color-fishbase-blackfish);
    border-color: var(--color-fishbase-anchovy);
    border-width: 1px;
    color: var(--color-fishbase-whitefish);
}

.button-secondary Image
{
    --unity-image-tint-color: var(--color-fishbase-whitefish);
}
