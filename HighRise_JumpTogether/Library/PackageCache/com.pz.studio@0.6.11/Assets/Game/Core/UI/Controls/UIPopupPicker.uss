.popup-picker {
    height: 32px;
    padding-left: 0;
    padding-right: 0;
    margin-top: auto;
    margin-bottom: auto;
}

.popup-picker #_button {
    height: 100%;
    background-color: var(--color-fishbase-catfish);
    color: var(--color-fishbase-mackerel);
    margin-top: auto;
    margin-bottom: auto;
    padding-right: 4px;
}

.popup-picker .button__content {
    align-items: center;
}

.popup-picker UIImage {
    width: 18px;
    height: 18px;
    --unity-image-tint-color: var(--color-fishbase-salmon);
    margin-left: 4px;
}

.popup-picker UILabel {
    margin: 0;
    padding: 0;
    font-size: 15px;
}

.popup-picker:checked #_button {
    background-color: var(--color-accents-secondary-25);
    border-color: var(--color-accents-secondary);
    color: var(--color-accents-secondary);
}

.popup-picker:checked UIImage {
    --unity-image-tint-color: var(--color-accents-secondary);
}
