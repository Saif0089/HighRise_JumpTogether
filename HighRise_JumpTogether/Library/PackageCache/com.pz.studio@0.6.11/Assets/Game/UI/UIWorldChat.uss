/*

    World Chat

*/

.world-chat
{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.world-chat .chat-container {
    flex-grow: 1;
}

.landscape .world-chat .chat-container {
    width: 40%;
    margin-left: auto;
    margin-right: auto;
}

.world-chat .blur-darken {
    background-color: rgba(2,0,1,0.3);
}

.world-chat #_aboveChat {
    flex-grow: 1;
    margin-bottom: 8px;
    margin-top: var(--safe-area-top);
}

.world-chat UITextField {
    background-color: rgba(0,0,0,0);
    color: var(--color-fishbase-bonito);
    border-width: 0;
    flex-grow: 1;
    padding: 0;
    margin: 0;
    margin-top: auto;
    margin-bottom: auto;
}

.world-chat .unity-text-field__input {
    border-radius: 0px;
    border-width: 0px;
    padding: 0;
    padding-left: 44px;
    padding-right: 44px;
    margin: 0;
    margin-top: auto;
    margin-bottom: auto;
}

.world-chat .text-field .text-field__input {
    color: var(--color-fishbase-bonito);
    -unity-text-align: middle-left;
}

/*

    Voice

*/

.world-chat #_voiceButton {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    overflow: hidden;
    display: none;
    flex-shrink: 0;
}

.world-chat.chat--has-voice #_voiceButton {
    display: flex;
}

.world-chat #_voiceButton > Image {
    width: 28px;
    height: 28px;
    margin: auto;
    --unity-image-tint-color: var(--color-fishbase-bonito);
}

.world-chat.chat--is-muted #_voiceButton Image {
    --unity-image: var(--image-icon-voice-muted);
}



.world-chat.chat--show-history #_above {
    margin-bottom: 16px;
}

.world-chat #_controls {
    margin-left: auto;
    margin-right: auto;
    flex-direction: row;
}

.world-chat #_voiceButton {
    margin-left: 8px;
}

/*

    Action Menu

*/

.world-chat UIActionPicker {
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 8px;
    display:none;
}

.landscape .world-chat UIActionPicker {
    margin-right: 0;
}

/*

    History

*/

.world-chat #_historyDrawerContainer {
    min-height: 56px;
}

.world-chat #_history {
    border-radius: 20px;
    overflow: hidden;
    margin-bottom: 68px;
    padding-left: 16px;
    padding-right: 16px;
    padding-top: 0;
    padding-bottom: 0;
}

.landscape .world-chat #_history {
    height: 340px;
}

.portrait .world-chat #_history {
    height: 268px;
    margin-left: 0px;
    margin-right: 0px;
}

.world-chat #_slideoutHandle {
    background-color: var(--color-fishbase-bonito-50);
    border-radius: var(--border-width-s);
    width: 58px;
    height: 6px;
    margin: 9px auto;
}

.world-chat #_historyDrawer {
    height: initial;
    display: none;
    background-color: var(--color-fishbase-blackfish-60);
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}

.landscape .world-chat #_historyDrawer {
    margin-bottom: -8px;
}

.world-chat #_history .message-view {
    margin-top: auto;
}

.world-chat #_history .message-view .scroll-bar {
    margin-top: 16px;
    margin-bottom: 16px;
}

/*

    Chat Bar

*/

.world-chat .chat-bar-container {
    position: absolute;
    bottom: 8px;
    left: 8px;
    right: 8px;
    flex-direction: row;
    flex-grow: 1;
    width: auto;
    padding-left: 6px;
    padding-right: 6px;
    align-items: center;
}

.world-chat #_chatBar {
    flex-grow: 1;
    min-height: 48px;
    padding-left: 6px;
    padding-right: 6px;
    align-items: center;
}

.world-chat #_chatInputContainer {
    flex-grow: 1;
    margin-right: 8px;
}

.world-chat #_chatInput {
    min-height: 50px;
    padding-top: 6px;
    padding-bottom: 6px;
}

.world-chat #_chatBarBackground {
    overflow: hidden;
    border-radius: 12px;
}

.world-chat.chat--show-history #_chatBar .blur-darken {
    background-color: rgba(2,0,1,0.7);
}

.world-chat #_chatBar .button {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    padding: 0px;
    background-color: var(--color-fishbase-bonito-15);
}

.world-chat #_chatBar .button Image {
    width: 22px;
    height: 22px;
}

.world-chat #_chatBar .button__content {
    flex-grow: 1;
}

.world-chat.chat--show-history #_historyButton {
    background-color: var(--color-accents-secondary-25);
}

.world-chat.chat--show-history #_historyButton Image {
    --unity-image-tint-color: var(--color-accents-secondary);
}

.world-chat #_chatInput .text-field__input .label {
    color: var(--color-fishbase-bonito-50);
    -unity-font-definition: var(--font-regular);
}

.world-chat #_sendMessageButton {
    width: 36px;
    height: 36px;
    display: none;
    align-self: flex-end;
    margin-bottom: 6px;
    margin-top: auto;
    transition-duration: .15s;
    transition-property: translate;
    translate: 80px 0 0;
    padding: 4px;
}

.world-chat.chat--has-text #_sendMessageButton {
    translate: 0 0 0;
    display: flex;
}

.world-chat #_sendMessageButton Image {
    width: 24px;
    height: 24px;
    margin-top: auto;
    margin-bottom: auto;
    --unity-image-tint-color: var(--color-accents-primary);
}

.world-chat.chat--has-text #_emotesButton {
    display: none;
}

/*

    Typing Indicator

*/

.world-chat #_typingIndicator {
    color: var(--color-fishbase-mackerel);
    -unity-font-definition: var(--font-thin-italic);
    font-size: var(--font-size-s);
    padding: 0;
    margin: 0;
    margin-left: 8px;
    margin-right: 8px;
    margin-top: 4px;
    margin-bottom: 4px;
}


/*

    Whisper

*/

.world-chat #_userSuggestionsContainer {
    bottom: 52px;
    max-height: 172px;
    margin-right: 36px;
}

.world-chat #_userSuggestions {
    background-color: var(--color-fishbase-catfish);
    border-radius: 16px;
    margin-right: auto;
    padding: 6px;
}

.world-chat #_userSuggestions .scroll-bar__thumb {
    min-height: 16px;
}

.world-chat .text-field__input {
    margin-left: 8px;
}


/*

    UGC

*/

.world-chat #_hud {
    position: absolute;
    top: var(--safe-area-top);
    bottom: 64px;
    left: 0;
    right: 0;
}
