<?xml version="1.0" encoding="utf-8"?>
<UXML
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="UnityEngine.UIElements"
    xmlns:editor="UnityEditor.UIElements"
    xsi:noNamespaceSchemaLocation="../../../../UIElementsSchema/UIElements.xsd"
>

    <VisualElement name="virtual-player" class="virtual-player landscape">
        <VisualElement name="_viewContainer">
            <VisualElement name="_transformContainer">
                <Image name="_view"/>    
            </VisualElement>
        </VisualElement>            
        <VisualElement name="_toolbar">
            <Button name="_autoConnect" text="Auto Connect"/>
            <Button name="_connect" text="Connect"/>
            <Button name="_disconnect" text="Disconnect"/>
        </VisualElement>
    </VisualElement>
    
    
</UXML>
